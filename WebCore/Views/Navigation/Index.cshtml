            function getMenu() {

                $.ajax({
                    type: "POST", //提交方式
                    url: "/Navigation/GetMenuByRole",//路径
                    // data: {},
                    dataType: "json",
                    success: function (result) {//返回数据根据结果进行相应的处理
                        if (result.code == 0) {

                            var menudata = result.Data;

                            $('#menu').sidebarMenu({ data: menudata })

                        } else {
                            Sp.Control.alerts.alert(JSON.stringify(result))

                        }
                    }
                });
            }
